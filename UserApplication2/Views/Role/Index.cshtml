@model IEnumerable<UserApplication2.Models.RoleApp>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Role Name
        </th>
        <th>
            Role Users
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Users.Any())
                {
                    <text>@string.Join(" ,", item.Users.Select(u => Helper.GetUserName(u.UserId)).ToArray())</text>

                }
                else
                {
                    <text>There is no user for this Role</text>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
